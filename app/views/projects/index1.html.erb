<h1>Listing projects</h1>

  <%= form_for :project, :url =>{:action => 'sort_project'},:method => (:get) do |f| %>
<%= f.select  :project_type, options_for_select([['home','home'],['office','office']]) %>
<%= f.submit 'choise'%>
<% end %>


<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Project type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= image_tag (project.pictures.first.asset.url(:medium)) %></td>
    <td><%= project.title %></td>
    <td><%= project.description %></td>
    <td><%= project.project_type %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path %>
<br />

<p>jjj
	<%= will_paginate @projects %>
</p>
