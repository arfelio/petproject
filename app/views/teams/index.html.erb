<h1>Listing teams</h1>
<div> <%= flash[:notice] %></div>
<table>
  <tr>
    <th>Photo</th>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
  	<td><%= image_tag team.photo.url(:medium) %></td>
    <td><%= team.name %></td>
    <td><%= team.description %></td>
    <td><%= link_to 'Show', team %></td>
  <% if session[:user_id] %> 
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
  </tr>
<% end %>
</table>

<br />
